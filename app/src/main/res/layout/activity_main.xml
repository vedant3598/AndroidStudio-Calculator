<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#080808"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <include
        layout="@layout/calculator_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#080808"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="C"
                android:textColor="@color/colourBtnText"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnBracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="( )"
                android:textColor="@color/colourBtnText"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="%"
                android:textColor="@color/colourBtnText"
                android:textSize="30sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="<-"
                android:textColor="@color/colourBtnText"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="7"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnEight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="8"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnNine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="9"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnMultiplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="*"
                android:textColor="@color/colourBtnText"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="4"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="5"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="6"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnSubtraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="-"
                android:textColor="@color/colourBtnText"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="1"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="2"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="3"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnAddition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="+"
                android:textColor="@color/colourBtnText"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="."
                android:textColor="@color/colourBtnText"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colourNumBtnBackground"
                android:minHeight="80dp"
                android:text="0"
                android:textColor="@color/colourNumBtnText"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="/"
                android:textColor="@color/colourBtnText"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colourBtnBackground"
                android:minHeight="80dp"
                android:text="="
                android:textColor="@color/colourBtnText"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

